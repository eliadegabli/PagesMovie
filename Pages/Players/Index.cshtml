@page
@model PagesMovie.Pages.Players.IndexModel

@{
    ViewData["Title"] = "שחקנים";
}

<h1>שחקנים</h1>

<p>
    <a asp-page="Create">צרף שחקן חדש</a>
</p>
<p>
    <a asp-page="Shuffle">חלק לקבוצות</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].playerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].inGame)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Player) {
        <tr>
            <td>
               @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.playerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.inGame)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
